
<div class = "main_page_content">

<h1 class="title">
  Share your knowledge with <span class="en title">En</span>light
</h1>

<p class="sub_text">
  Enlight is a Twitter styled app that allows you to share things you have learnt by creating <span class="en">lights!</span>
</p>

<div>
  <img src="learning1.jpg">
</div>

<div id="log_in">

<p>Log in</p>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email], :size => "30x20"  %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password, :size => "70x20"  %>
  </p>
  <p class="button"><%= submit_tag "Log in" %></p>
<% end %>

</div>

<div id="sign_up">
<p>Sign Up</p>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_message">
      <h2>Form is invaild</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>


  <p>
    <%= f.label :interests %><br />
    <%= f.text_field :interests %>
  </p>


  <p class="button"><%= f.submit %></p>

<% end %>
</div>

</div>

